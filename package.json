{
  "name": "spring-to-autumn",
  "description": "Spring to Autumn",
  "version": "0.0.1",
  "author": "Peter Bodechtel",
  "license": "UNLICENCED",
  "repository": {
    "type": "git",
    "url": "https://github.com/sweetlikepete/spring-to-autumn"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "watch": "concurrently 'webpack --watch --env.platform=node' 'webpack --watch --env.platform=web'",
    "build": "rm -rf build && webpack --env.platform=node --env.production && webpack --env.platform=web --env.production",
    "build:local": "rm -rf build && webpack --env.platform=node && webpack --env.platform=web",
    "deploy": "npm run build && gcloud app deploy --quiet --project spring-to-autumn --verbosity info",
    "lint": "eslint src",
    "local": "npm run build:local && concurrently 'npm run watch' 'npm run start:local'",
    "start:local": "nodemon ./build/server/main.js localhost 8080 --watch build/server src/app",
    "start": "GCLOUD_PROJECT=questly-nodejs NODE_PATH=src NODE_ENV=production node build/server/main.js"
  },
  "dependencies": {
    "bootstrap": "^4.2.1",
    "express": "^4.16.4",
    "fs-extra": "^7.0.1",
    "node-sass": "^4.11.0",
    "nunjucks": "^3.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.2",
    "@sweetlikepete/eslint-config": "1.0.33",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "assets-webpack-plugin": "^3.9.7",
    "autoprefixer": "^9.4.7",
    "babel-loader": "^8.0.5",
    "babel-plugin-universal-import": "^4.0.0",
    "clean-css-loader": "^1.1.0",
    "concurrently": "^4.1.0",
    "css-loader": "^2.1.0",
    "eslint": "^5.12.1",
    "eslint-plugin-array-func": "^3.1.2",
    "eslint-plugin-compat": "^3.1.0",
    "eslint-plugin-eslint-comments": "^3.0.1",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-optimize-regex": "^1.1.6",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^7.1.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "image-webpack-loader": "^4.6.0",
    "mini-css-extract-plugin": "^0.5.0",
    "nodemon": "^1.18.9",
    "postcss-font-smoothing": "^0.1.0",
    "postcss-font-variant": "^4.0.0",
    "postcss-image-set-polyfill": "^1.0.0",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "typescript": "^3.3.1",
    "webpack": "^4.29.1",
    "webpack-cli": "^3.2.3",
    "webpack-node-externals": "^1.7.2"
  }
}
